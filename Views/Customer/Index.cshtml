@using Grubhub.Controllers;
@model UserPostsViewModel


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <title>Customer Home</title>


    <style>
        .post-cards h2 {
            font-size: 24px;
            margin: 0 0 10px;
        }

        .container {
            display: flex;
            /*justify-content: sta;
                background-color: rgb(182, 185, 182);*/
            padding: 10px;
        }

        .text-secondary {
            color : black !important;
        }

        .container button {
            /*width: 60px;
            height: 30px;
            margin: 0 auto;
            display:flex;
            justify-content: center;
            align-items: center;
            margin-top: 30px;
            color: rgb(243, 243, 243);
            background-color: rgb(14, 19, 16);
            border: 2px solid rgb(230, 235, 229);*/
            display: flex;
            justify-content: center;
            align-items: center;
        }

        

        .card-Order {
            display : flex ;
            flex-direction: column ;
            padding : 0 ;
            margin : 0 ;
            box-sizing : border-box;
            border-top-left-radius: 20px !important;
            border-top-right-radius: 20px !important;
            justify-content: center;
            align-items: center;
            text-align: center;
            margin-bottom : 5px;
            

            
        }

        .card-G {
            border: none !important;
            display: block;
            margin: 0;
            width: 50%;
            background-color: #E5D9B6 !important;
            border-radius : 0px;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }

        .card-C {
            border: none !important;
            display: block;
            margin: 0;
            width: 50%;
            height: 50%;
            background-color: #E5D9B6 !important;
        }

        .card-L {
            border: none !important;
            display: block;
            margin: 0;
            width: 50%;
            height: 20px;
            border-bottom-left-radius: 20px;
            border-bottom-right-radius: 20px;
            background-color: #E5D9B6 !important;
        }


        .Head-Poster {
            background-color: #285430;
            border-top-left-radius : 20px ;
            border-top-right-radius : 20px;
            text-align : center ;
        }

        .Head-Poster p {
            padding : 10px ;
            color : white ;
        }

        .card-body button {
            /*width: 100px;
            height: 40px;*/
            width : 100%;
            margin: 0 auto;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 30px;
            margin: 0px;
            color: white;
            background-color: rgb(5, 30, 170);
        }

        body {
            background-color: rgb(54, 54, 54);
            background-image: url('https://watermark.lovepik.com/background/20211021/large/lovepik-elegant-food-line-texture-background-image_450042225.jpg');
        }

        h1 {
            color: rgb(12, 70, 196);
            margin: 0 auto;
            display: flex;
            justify-content: center;
            background-color: aliceblue;
            padding: 10px;
            border: 4px solid #1387cab0;
            border-radius: 20px;
            margin-top: 100px;
        }

        h2 {
            color: #87c171;
            margin: 0 auto;
            display: flex;
            justify-content: center;
        }

        .card-body {
            /*max-width: 800px;
            max-height: 500px;*/
            margin: 0;
            background-color: #1387cab0;
            padding: 10px;
            color: white;
            display: block;
            justify-content: center;
            align-items: center;
        }

        .card-body-main{
            /*max-width: 800px;
                    max-height: 500px;*/
            margin: 0;
            background-color: #5F8D4E;
            padding: 10px;
            color: white;
            display: block;
            justify-content: center;
            align-items: center;
            margin : 10px ;
            border-radius : 20px ;
        }

        .card-body-cm {
            /*max-width: 800px;
            max-height: 500px;*/
            
            background-color: #A4BE7B;
            padding: 10px;
            color: white;
            display: block;
            justify-content: center;
            align-items: center;
            margin: 20px;
            margin-top : 5px ;
            margin-bottom : 5px ;
            border-radius: 20px;
        }

        .mb-3 {
            position: relative;
            width: 250px;
        }

        .card-body label {
            width: 100%;
            padding: 10px;
            border: 1px solid saddlebrown;
            background-color: rgb(43, 231, 159);
            border-radius: 5px;
            outline: none;
            color: aliceblue;
            font-size: 1em;
        }

        .bg-model{
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            position: fixed;
            top: 0;
            left: 0;
            display:flex;
            justify-content : center ;
            align-items : center ;
            display :none ;
            z-index: 9999; /* กำหนดค่า z-index เพื่อให้ div นี้อยู่หน้าสุด */

        }

        .model-content {
            /*width : 300px;
            height : 400px;*/
            background-color : white ;
            border-radius : 4px ;
            text-align : center ;    
            padding : 20px ;
            position : relative;
            opacity: 1.0 !important;
        }

        input {
            width : 50%;
            display : block;
            margin : 15px auto;

        }

        .close {
            position:absolute;
            top:0;
            right: 14px;
            font-size : 42px;
            transform : rotate(45deg);
            cursor: pointer;
        }
        @@media screen and (max-width: 800px) and (min-width: 0px) {
            .card-C {
                width : 85%;
                
            }
            .card-G {
                width: 85%;

            }

            .card-L {
                width: 85%;
            }

            .text-secondary {
                text-align: center;
            }
        }
        
        


    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    @*<script src="https://cdn.tailwindcss.com"></script>*@

</head>
<body>
    @{
        ViewData["Controller"] = "Customer";
    }
    <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Customer", Model.User)">
                <img src="~/grubhub_logo.png" alt="grubhub_logo" width="100" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @if (ViewContext.RouteData.Values["controller"].ToString() == "Customer" && ViewContext.RouteData.Values["action"].ToString() == "Index") {
                    <text>active</text>
 }">
                        <a class="nav-link" href="@Url.Action("Index", "Customer", Model.User)">Home</a>
                    </li>
                    <li class="nav-item @if (ViewData["Controller"].ToString() == "Customer" && ViewContext.RouteData.Values["action"].ToString() == "Profile") {
                    <text>active</text>
 }">
                        <a class="nav-link" href="@Url.Action("Profile", "Customer", new {id = Model.User.Id})">Profile</a>
                    </li>
                </ul>
            </div>
            <form method="POST" asp-action="Logout" asp-controller="Grabber">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </div>


    <h1 class="text-xl-center">Customer Home</h1>
    <h2 >Hello. Welcome, @Model.User.Username Let's order something to eat</h2>
    @if (Model.Posts == null || !Model.Posts.Any())
    {
        <p>There are no posts to show. Please try again later.</p>
    }
    else
    {
        @foreach (var post in Model.Posts)
        {   
            <div class="card-Order">

                <div class="card-G">
                    <div class="Head-Poster">
                            <p>Grabber Username: @post.GrabberName</p>
                    </div>
                    <div class="card-body-main">
                        @*<p>Grabber Username: @post.GrabberName</p>*@
                        <p>Canteen Name: @post.CanteenName</p>
                        <p>Max Quantity: @post.MaxQuantity</p>
                        <p>Max Price: @post.MaxTotalPrice</p>
                        <p>Close Time: @(post.CloseTime == DateTime.MaxValue ? "Close manually" : post.CloseTime.ToString())</p>
                        <button onclick="toggleForm('@post.PostId')">Request an Order</button>
                        <p></p>
                    </div>
                </div>
                


            @foreach (var order in Model.CustomerOrders)
            {
                
                @if (order.PostId == post.PostId)
                {
                    <div class="card-C">
                            <div class="card-body-cm">
                            <p>Food Name: @order.FoodName</p>
                            <p>Number of Boxes: @order.NumBoxes</p>
                            <p>Estimated Total Price: @order.EstimatedTotalPrice</p>
                            <p>Pickup Place: @order.PickupPlace</p>
                            @if (!string.IsNullOrEmpty(order.Notes))
                            {
                                <p>Notes: @order.Notes</p>
                            }
                            @*<hr />*@
                        </div>
                    </div>
                }
            }
                <div class="card-L"></div>
            </div>
            <div class="bg-model" id="order-form-@post.PostId" style="display: none;">
                <div class="model-content">
                    <div class="close">+</div>
                    <br>
                    <form method="post" asp-action="Index" asp-controller="Customer">
                        <input type="hidden" name="CustomerName" value="@Model.User.Username" />
                        <input type="hidden" name="CustomerId" value="@Model.User.Id" />
                        <input type="hidden" name="PostId" value="@post.PostId" />
                        <div class="form-group">
                            <label for="foodName-@post.PostId">Food Name:</label>
                            <input type="text" name="foodName" id="foodName-@post.PostId" class="form-control" required placeholder="ข้าวไก่ทอดเทคโน" />
                        </div>
                        <div class="form-group">
                            <label for="numBoxes-@post.PostId">Number of Boxes:</label>
                            <input type="number" name="numBoxes" id="numBoxes-@post.PostId" class="form-control" required placeholder="2" />
                        </div>
                        <div class="form-group">
                            <label for="totalPrice-@post.PostId">Estimated Total Price:</label>
                            <input type="number" name="EstimatedTotalPrice" id="totalPrice-@post.PostId" class="form-control" required placeholder="70" />
                        </div>
                        <div class="form-group">
                            <label for="pickupPlace-@post.PostId">Pickup Place:</label>
                            <input type="text" name="pickupPlace" id="pickupPlace-@post.PostId" class="form-control" required placeholder="ECC-504" />
                        </div>
                        <div class="form-group">
                            <label for="notes-@post.PostId">Note:</label>
                            <textarea name="notes" id="notes-@post.PostId" class="form-control"></textarea>
                        </div><br>
                        <button type="submit" onclick="validateForm(@post.MaxQuantity, @post.MaxTotalPrice, @post.PostId)">Send Order</button>
                    </form>
                </div>
            </div>
            @*<hr />*@
        }
    }
    @*<div class="bg-model">
        <div class="model-content">

        </div>
    </div>*@
    <script src="~/customer/customer-form_css2.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
            integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
            integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>



</body>
</html>
