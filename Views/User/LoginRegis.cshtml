@model User;
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
	<link href="~/css/style.css" rel="stylesheet" />
    <title>Sign in & Sign up Form</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <!--@Html.ValidationSummary()-->
                <form asp-controller="User" class="sign-in-form" method="post" asp-action="Login">
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text"  name="username" placeholder="Username" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" name="password" placeholder="Password" >
                    </div>
                    <input type="submit" value="Login" class="btn solid" />
                    @if (TempData["LoginMessage"] != null)
                    {
                        <div style="color:red;">@TempData["LoginMessage"]</div>
                    }
                </form>
                <!--@Html.ValidationSummary()-->
                <form method="post" asp-controller="User" class="sign-up-form" asp-action="LoginRegis">
                    <h2 class="title">Sign up</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" name="Username" placeholder="Username" asp-for="Username"/>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" name="Email"placeholder="Email" asp-for="Email"/>
                    </div>
                    
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Password" asp-for="Password" id="password"/>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Confirm-Password" asp-for="ConfirmPassword" id="confirm-password" />
                    </div>
                    <input type="submit" class="btn" value="Sign up" onclick="validatePassword(event)" />
                    @if (TempData["RegisterationMessage"] != null)
                    {
                        <div style="color:red;">
                            @TempData["RegisterationMessage"]
                        </div>
                    }

                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        "Ready to order some delicious food with us? If you don't have an account yet, sign up now and join the feast!"
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Sign up
                    </button>
                </div>
               <img src="~/img/food3.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        "Hungry and ready to order? Simply sign in to your account and let the feasting begin!"
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Sign in
                    </button>
                </div>
                <img src="~/img/login2.svg" class="image" alt="" />
            </div>
        </div>
    </div>

	<script src="~/js/app.js"></script>
</body>
</html>


